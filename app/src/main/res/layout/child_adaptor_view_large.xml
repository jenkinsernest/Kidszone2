<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="260dp"
    android:layout_height="260dp"
    android:layout_margin="10dp"

    >


    <ImageView
        android:id="@+id/edit"

        android:layout_width="45dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="224dp"
        android:layout_marginRight="224dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/edit2" />

    <ImageView
        android:id="@+id/delete"

        android:layout_width="45dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="27dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/trash2" />

    <androidx.cardview.widget.CardView
    app:cardCornerRadius="6dp"
    android:layout_width="282dp"
    android:layout_height="200dp"
    android:layout_marginRight="2dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="2dp"
    android:layout_marginTop="2dp"
    app:cardUseCompatPadding="false"
    card_view:elevation="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        >




        <TextView

            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:gravity="center|start"
            android:lineSpacingExtra="2dp"
            android:maxLines="1"
            android:padding="3dp"
            android:textStyle="bold"

            android:text="Legumchim"
            android:textColor="#000"
            android:textSize="13dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"

            >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="50dp"

                android:layout_gravity="center_vertical"
                android:src="@drawable/pass"
                 />

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:gravity="center|start"
            android:lineSpacingExtra="2dp"
            android:maxLines="1"
            android:padding="3dp"

            android:text="Legumchim"
            android:textColor="#1BAE1D"
            android:textSize="12dp"
            android:textStyle="bold"
            />
        </LinearLayout>

        <TextView
            android:id="@+id/access_type"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/username"
            android:layout_marginTop="20dp"
            android:ellipsize="end"
            android:gravity="center|start"
            android:lineSpacingExtra="2dp"
            android:maxLines="1"
            android:padding="3dp"
            android:text="Unlimited Usage"
            android:textColor="#777"
            android:textSize="12.5dp"
            android:textStyle="italic" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/logo"
            app:civ_circle_background_color="@color/black"
            android:layout_alignParentBottom="true"

            />

        <ImageView
            android:id="@+id/settime"

            android:layout_width="70dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"

            android:layout_marginRight="103dp"
            android:layout_marginBottom="6dp"
            android:src="@drawable/time2" />

        <androidx.appcompat.widget.SwitchCompat

            android:id="@+id/time_switch"
            android:layout_width="74dp"
            android:layout_height="54dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="14dp"
            android:layout_marginBottom="2dp"
            android:checked="false"
            android:thumb="@drawable/thumb"
            app:track="@drawable/track" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>
</RelativeLayout>