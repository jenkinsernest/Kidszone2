<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/ninos_color"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:src="@drawable/logoreal"
        android:layout_centerInParent="true"
        />
<LinearLayout

     android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"



    >

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#fff"
            android:layout_marginTop="5dp"


            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:id="@+id/logo"
                    android:src="@drawable/educational_goals3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
android:id="@+id/head"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/logo"
                    android:layout_toRightOf="@+id/logo"
                    android:gravity="center"
                    android:text="Educational Goals"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textColor="@color/ninos_color"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/divider"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"
                    android:layout_margin="10dp"
                    android:layout_toEndOf="@+id/head"
                    android:layout_toRightOf="@+id/head"
                    android:src="@drawable/lab_xiala" />

                <TextView
                    android:id="@+id/kidname"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_toEndOf="@+id/divider"
                    android:layout_toRightOf="@+id/divider"
                    android:text="jenkins"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textColor="#444"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:ellipsize="end"
                    />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/adapt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:layout_gravity="center_horizontal"
        android:scrollbarSize="10dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        />


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="150dp"
android:background="#ffffff"
            >
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Learn First"
    android:fontFamily="sans-serif-smallcaps"
    android:textStyle="bold"
    android:textSize="20dp"
android:textColor="@color/ninos_color"
    android:layout_marginStart="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="5dp"
    />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Block entertainment content until all \ndaily educational goals are complete."
            android:textSize="15dp"
            android:layout_marginBottom="10dp"
            android:lineSpacingExtra="3dp"
            android:textColor="#000"
            android:paddingStart="10dp"
            />
        <Switch
            android:id="@+id/learn_first"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
         android:layout_alignParentEnd="true"


            />
            </RelativeLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Apply Changes"
                android:textColor="#fff"
                android:id="@+id/save"
                android:textSize="16dp"
                android:textStyle="bold"
                android:background="@color/ninos_color"

                />
        </LinearLayout>

    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#0000"
        >

        <ImageView
            android:id="@+id/back"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/btn_backward" />


    </RelativeLayout>
</LinearLayout>
</RelativeLayout>