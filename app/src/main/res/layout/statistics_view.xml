<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:src="@drawable/logoreal"
        android:layout_centerInParent="true"
        />
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
     android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dddddddd"

    tools:context=".fragmentpackage.settings">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#fff"
            android:layout_marginTop="5dp"


            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/back2"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/statistics" />

                <TextView
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
android:id="@+id/settext"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_toEndOf="@+id/back2"
                    android:layout_toRightOf="@+id/back2"
                    android:gravity="center"
                    android:text="Statistics"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textColor="#00B8D4"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/divider"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"
                     android:layout_margin="10dp"
                    android:layout_toEndOf="@+id/settext"
                    android:layout_toRightOf="@+id/settext"
                    android:src="@drawable/lab_xiala" />

                     <TextView
                    android:id="@+id/kidname"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                     android:layout_margin="5dp"
                    android:layout_toEndOf="@+id/divider"
                    android:layout_toRightOf="@+id/divider"
                         android:text="jenkins"
                         android:fontFamily="sans-serif-smallcaps"
                         android:textColor="#444"
                         android:textSize="18dp"
                         android:textStyle="bold"
                         android:gravity="center"
                         />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:background="#fff">

       <Spinner
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:id="@+id/choice"
           android:background="#0111"

           />
    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/adapt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:layout_gravity="center_horizontal"
        android:scrollbarSize="10dp"
        android:layout_marginTop="5dp"
        android:layout_weight="2"
        />
    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#0000"
        >

        <ImageView
            android:id="@+id/back"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/btn_backward" />


    </RelativeLayout>
</LinearLayout>
</RelativeLayout>