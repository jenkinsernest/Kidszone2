<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
     android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ddd"

    tools:context=".fragmentpackage.settings">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#fff"
            android:layout_marginTop="5dp"


            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/webset" />

                <TextView
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
android:id="@+id/settext"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_toEndOf="@+id/logo"
                    android:layout_toRightOf="@+id/logo"
                    android:gravity="center"
                    android:text="Web Settings"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textColor="#444"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/divider"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"
                     android:layout_margin="10dp"
                    android:layout_toEndOf="@+id/settext"
                    android:layout_toRightOf="@+id/settext"
                    android:src="@drawable/lab_xiala" />

                     <TextView
                    android:id="@+id/kidname"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                     android:layout_margin="5dp"
                    android:layout_toEndOf="@+id/divider"
                    android:layout_toRightOf="@+id/divider"
                         android:text="jenkins"
                         android:fontFamily="sans-serif-smallcaps"
                         android:textColor="#444"
                         android:textSize="18dp"
                         android:textStyle="bold"
                         android:gravity="center"
                         />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#fff">

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:text="Add A Black List"
             android:gravity="center_vertical"
             android:textSize="18dp"
             android:textStyle="bold"
             android:paddingLeft="10dp"
             android:layout_centerInParent="true"
             />

        <ImageView
            android:id="@+id/add"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:layout_alignParentEnd="true"
            android:src="@drawable/addchild"
            android:layout_alignParentRight="true" />

    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/adapt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:layout_gravity="center_horizontal"
        android:scrollbarSize="10dp"
        android:layout_marginTop="5dp"
        android:layout_weight="2"
        />


    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#7fff"

        >

        <ImageView
            android:id="@+id/back"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="fitXY"

            android:src="@drawable/btn_backward" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/logoreal"

            />
    </RelativeLayout>
</LinearLayout>