<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cardView_category_adapter"
    android:layout_width="110dp"
    android:layout_height="130dp"
    android:layout_marginEnd="8dp"
    app:cardCornerRadius="2dp"

    app:cardUseCompatPadding="false"
    card_view:elevation="5dp">

    <RelativeLayout
        android:id="@+id/relativelayout_category_adapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">



        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imageView_category_adapter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="#00B8D4"
            app:riv_corner_radius="2dp" />
        <View
            android:id="@+id/view2"
            android:layout_marginLeft="1.5dp"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="#fff" />

        <View
            android:id="@+id/view"
            android:layout_marginLeft="5dp"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="#fff" />

        <View
            android:id="@+id/view_latest_gridView_adapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/thum_background" />

      <!--  <View
            android:id="@+id/viewImage_latest_gridView_adapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/image_thum_textview_bg" />-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
             android:layout_marginStart="10dp">

            <TextView
                android:id="@+id/textViewName_category_adapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="12sp"
              />

            <TextView
                android:id="@+id/textView_categoryCount_category_adapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewName_category_adapter"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingBottom="5dp"
                android:text="@string/app_name"
                android:textColor="@color/blue_gray"
                android:textSize="10sp" />

        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>